<SelectWindow>:
    RelativeLayout:
        cols: 1

        RelativeLayout:
            Label:
                text: "Let's Train A Model"
                bold: True
                size_hint: .20, .10
                pos_hint: {'top': 1.0, 'right': .6}
                font_size: '50sp'
                color: 1, .8, .4, .85

        GridLayout:
            cols: 1
            # row_force_default: True
            # row_default_height: 50

            GridLayout:
                cols: 7
                # row_force_default: True
                # row_default_height: 20
                Label:
                Label:
                Label:
                Label:
                Label:
                Label:
                Label:
                Label:
                Label:
                Label:
                    text: "Select Algorithms"
                    bold: True
                    font_size: '20sp'
                Label:
                Label:
                    text: "Select DataSet"
                    bold: True
                    font_size: '20sp'
                Label:
                Label:
                Label:
                Label:
                GridLayout:
                    cols: 2
                    row_force_default: True
                    row_default_height: 50

                    # Label:
                    Label:
                        text: "method 1"
                    CheckBox:
                        id: method_1
                    # Label:
                    # Label:
                    Label:
                        text: "method 2"
                    CheckBox:
                        id: method_2
                    # Label:
                    # Label:
                    Label:
                        text: "method 3"
                    CheckBox:
                        id: method_3

                    # Label:

                Label:
                GridLayout:
                    cols: 2
                    row_force_default: True
                    row_default_height: 50

                    # Label:
                    Label:
                        text: "DatsSet 1"
                    CheckBox:
                        id: set_1
                        on_press:
                            set_2.active = False
                            set_3.active = False
                            set_4.active = False
                    # Label:
                    # Label:
                    Label:
                        text: "DatsSet 2"
                    CheckBox:
                        id: set_2
                        on_press:
                            set_1.active = False
                            set_3.active = False
                            set_4.active = False
                    # Label:
                    # Label:
                    Label:
                        text: "DatsSet 3"
                    CheckBox:
                        id: set_3
                        on_press:
                            set_1.active = False
                            set_2.active = False
                            set_4.active = False
                    # Label:
                    # Label:
                    Label:
                        text: "DatsSet 4"
                    CheckBox:
                        id: set_4
                        on_press:
                            set_1.active = False
                            set_2.active = False
                            set_3.active = False
                    # Label:

            GridLayout:
                cols: 3
                row_force_default: True
                row_default_height: 50

                Label:
                Label:
                Label:
                Label:
                Label:
                Label:
                Label:
                Label:
                Label:
                Label:

                Button:
                    text: "Run"
                    size_hint: .20, .10
                    pos_hint: {'top': .15, 'right': .4}
                    font_size: '20sp'
                    background_normal: 'normal.png'
                    background_color: 1, .8, .4, .85
                    on_press: root.run_btn(method_1,method_2,method_3,set_1,set_2,set_3,set_4)


                Label:
                Label:
                Label:
                Label:
                Label:
                Button:
                    text: "Back To The Main Window"
                    size_hint: .20, .10
                    pos_hint: {'top': .15, 'right': .4}
                    font_size: '20sp'
                    background_normal: 'normal.png'
                    background_color: 1, .8, .4, .85
                    on_press: root.manager.current = 'welcome'

